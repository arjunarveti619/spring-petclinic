node {
  def remote = [:]
  remote.name = 'privatevm'
  remote.host = 'spring-petclinic-app.koreacentral.cloudapp.azure.com'
  remote.user = 'adminuser'
  remote.password = 'Admin123'
  remote.allowAnyHosts = true
  stage('Clone Repo') {
      git url: 'https://github.com/arjunarveti619/spring-petclinic'
  }
  stage('Remote SSH') {
    sshScript remote: remote, script: "deploy-spring-petclinic.sh"
  }
  stage("Clean up workspace"){
      cleanWs()
  }
}
